.container: .row
  .col-md-6.col-md-offset-3
    form.auth.login(name="login")
      h1.text-center login
      label email
      input.form-control(type="email", name="email", ng-model="user.email")
      label password
      input.form-control(type="password", name="password", ng-model="user.password")
      br
      button.btn.btn-lg.btn-primary.btn-block.text-center(ng-click="submit()") login
    .text-center: a(href="/#/signup") register
