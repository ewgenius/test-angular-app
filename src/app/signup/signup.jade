.container: .row
  .col-md-6.col-md-offset-3
    form.auth.signup(name="signup")
      h1.text-center signup
      .form-group(ng-class="{ 'has-error': signup.email.$invalid }")
        label
          | email
          span(ng-show="signup.email.$invalid") (invalid!)
        input.form-control(type="email", name="email", ng-model="user.email")
      .form-group(ng-class="{ 'has-error': passwordInvalid }")
        label password
        input.form-control(type="password", name="password", ng-model="user.password", ng-change="validatePassword()")
      .form-group(ng-class="{ 'has-error': passwordInvalid }")
        label
          | confirm password 
          span(ng-show="passwordInvalid") (passwords must match!)
        input.form-control(type="password", name="password1", ng-model="user.password1", ng-change="validatePassword()")
      br
      a.btn.btn-lg.btn-primary.btn-block.text-center(ng-click="submit()", ng-disabled="signup.email.$invalid || passwordInvalid") sign up
    
